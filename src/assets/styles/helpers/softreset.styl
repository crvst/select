html
  box-sizing border-box
  -ms-overflow-style -ms-autohiding-scrollbar
  overflow-y scroll
  -webkit-text-size-adjust 100%
  if tap == false
    -webkit-tap-highlight-color rgba(255, 255, 255, 0)
  else
    -webkit-tap-highlight-color $tap-color

*
*::before
*::after
  box-sizing inherit
  border-style solid
  border-width 0

@at-root
  @-ms-viewport
    width device-width

[tabindex="-1"]:focus
  outline none !important

[role="button"]
  cursor pointer

audio:not([controls])
  display none

button
  -webkit-appearance button
  overflow visible

details
  display block

abbr[title]
abbr[data-original-title]
  cursor help

a
area
button
[role="button"]
input
label
select
summary
textarea
  touch-action manipulation

input
  -webkit-border-radius 0

  &[type="button"]
  &[type="reset"]
  &[type="submit"]
    -webkit-appearance button

  &[type="number"]
    width auto

  &[type="search"]
    -webkit-appearance textfield

    &::-webkit-search-cancel-button
    &::-webkit-search-decoration
      -webkit-appearance none

input[type=submit]
button
  cursor                pointer
  display               inline-block
  text-align            center
  text-decoration       none
  -webkit-user-drag     none
  user-select           none

input[type=submit]::-moz-focus-inner
button::-moz-focus-inner
  padding

select
  -moz-appearance none
  -webkit-appearance none

  &::-ms-expand
    display none

  &::-ms-value
    color currentColor

textarea
  overflow auto

[hidden]
  display none !important

[aria-busy="true"]
  cursor progress

[aria-controls]
  cursor pointer

[hidden][aria-hidden="false"]
  clip rect(0 0 0 0)
  display inherit
  position absolute

  &:focus
    clip auto

html
{$form-elements}
  font-smoothing-mixin(true)

main
  display block

pre
  overflow auto

progress
  display inline-block

summary
  display block

template
  display none
