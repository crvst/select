// Font smoothing
// -------------------------
font-smoothing-mixin(enabled = true)
  if enabled
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
  else
    -webkit-font-smoothing none
    -moz-osx-font-smoothing auto

// Text-selection
// -------------------------
text-selection-mixin(background-color, color)
  ::selection
    background-color background-color
    if color
      color color

// Fonts
// -------------------------
font-face(name, weight = normal)
  @font-face
    font-family name
    font-weight weight
    src url('{name}.woff2') format('woff2'), url('{name}.woff') format('woff')

// Disabled
// -------------------------
disabled()
  pointer-events none
  cursor not-allowed

// List-reset
// -------------------------
list-reset(hard-reset=false)
  if hard-reset
    padding: 0
    margin: 0
  +e(item)
    list-style: none
    display: block

// One-axis gutters
// -------------------------
padding-x(value)
  padding-right value
  padding-left value

padding-y(value)
  padding-top value
  padding-bottom value

margin-x(value)
  margin-right value
  margin-left value

margin-y(value)
  margin-top value
  margin-bottom value

// Button trigger
// -------------------------
button-trigger()
  width: 100%
  margin: 0
  display: block
  background-color: $background-select
  text-align: left
  font-size: inherit
  font-family: inherit
  transition: all 0.1s ease

  &:hover
    background-color: #f5f5f5
  &:active
    background-color: #ddd
    color: inherit
  &:focus
    background-color: #eee
    outline: none
  +m(disabled)
    disabled()
    background-color: $background-select
